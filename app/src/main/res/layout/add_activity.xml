<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/A_et_ActivityName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_permission"
        android:drawablePadding="10dp"
        android:hint="ActivityName"
        />

    <EditText
        android:id="@+id/A_et_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_des"
        android:drawablePadding="10dp"
        android:hint="Description"
        />

    <TextView
        android:id="@+id/tv_datetimeStart_alert"
        android:text="DATE TIME START"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_datetimeEnd_alert"
        android:text="DATE TIME END"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/sp_ble"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="30dp">

    </Spinner>

</LinearLayout>