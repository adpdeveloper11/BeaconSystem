<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/D_et_nameUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_add"
            android:drawablePadding="5dp"
            android:hint="Name" />

        <EditText
            android:id="@+id/D_et_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:hint="Username" />

        <EditText
            android:id="@+id/D_et_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:hint="Password" />

        <EditText
            android:id="@+id/D_et_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:hint="Email" />

        <EditText
            android:id="@+id/D_et_permission"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_permission"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:hint="Permission" />
    </LinearLayout>

</LinearLayout>